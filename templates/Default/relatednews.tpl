<div class="game-similar__slider-item swiper-slide-active" data-swiper-slide-index="0" style="width: 256.5px; margin-right: 15px;">
    <a href="{full-link}" class="prod-preview ">
        <div class="prod-preview__overlay" style="background-image: url('[xfvalue_img]');">

            <div class="prod-preview__init-gr">
                <div class="price-label">
                    <font class="currencyPrice" currency="[xfvalue_price]">[xfvalue_price]</font> <font class="currencySymbol"><span class="rub">P</span></font>
                </div>
            </div>
        </div>

        <div class="prod-preview__hover-gr">

            <div class="prod-preview__desc">
                <div class="prod-preview__title">
                   {title}              </div>
                                                    <p class="prod-preview__genre">
                        ЖАНР: <span>{category}</span>                    </p>
                            </div>

            <span class="btn btn--round btn--orng btn--md prod-preview__price-btn">
                <span class="ico ico--cart-w"></span>
                <font class="currencyPrice" currency="[xfvalue_price]">[xfvalue_price]</font> <font class="currencySymbol"><span class="rub">P</span></font>
            </span>

        </div>

    </a>
</div>